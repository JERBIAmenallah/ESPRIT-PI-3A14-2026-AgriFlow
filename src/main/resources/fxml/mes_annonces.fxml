<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.agriflow.controllers.MesAnnoncesController"
      spacing="15" style="-fx-padding: 20;" prefHeight="500.0" prefWidth="800.0">
    
    <Label text="Mes Annonces" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <TableView fx:id="annoncesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="titleColumn" text="Titre" prefWidth="200"/>
            <TableColumn fx:id="priceColumn" text="Prix (TND)" prefWidth="100"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
            <TableColumn fx:id="categoryColumn" text="CatÃ©gorie" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Statut" prefWidth="100"/>
        </columns>
    </TableView>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="editButton" text="Modifier" onAction="#handleEdit"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button fx:id="deleteButton" text="Supprimer" onAction="#handleDelete"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button fx:id="refreshButton" text="Actualiser" onAction="#handleRefresh"/>
    </HBox>
</VBox>
